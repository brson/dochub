<div id="wiki-wrapper" class="page">

  <div class="row">
    <div class="span12">
      <a id="githublink" class="btn btn-info btn-mini" href="http://github.com/{{user}}/{{repo}}/wiki/{{name}}">
	visit this page on github
      </a>
    </div>
  </div>

  <div class="row">
    <div id="wiki-content" class="span9">

      {{#needs_header}}
      <h1>{{title}}</h1>
      {{/needs_header}}

      {{{content}}}

    </div>

    <div id="wiki-sidebar" class="span3">
      {{{sidebar_content}}}
    </div>
  </div>

  <div class="row">
    <div id="wiki-footer" class="span12">
      {{{footer_content}}}
    </div>
  </div>

</div>
