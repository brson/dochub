
<div>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
	<a class="brand" href = "http://github.com/{{user}}/{{repo}}/wiki/{{name}}">
	  view on github
	</a>
      </div>
    </div>
  </div>

  <div id="main-container" class="container">

    <div class="row">
      {{#has_sidebar}}
      <div id="wiki-content" class="span8">
      {{/has_sidebar}}
      {{^has_sidebar}}
      <div id="wiki-content" class="span12">
      {{/has_sidebar}}

	{{#needs_header}}
	<h1>{{title}}</h1>
	{{/needs_header}}

	{{{content}}}

      </div>

      {{#has_sidebar}}
      <div class="span4">
	<div id="wiki-sidebar">
	  {{{sidebar_content}}}
	</div>
      </div>
      {{/has_sidebar}}
    </div>

    {{#has_footer}}
    <div class="row">
      <div class="span12">
	<div id="wiki-footer">
	  {{{footer_content}}}
	</div>
      </div>
    </div>
    {{/has_footer}}

  </div> <!-- main-container -->

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="/js/fetch.js"></script>
<script>
  $(function() {
    $(document).keypress(function (event) {
      var zero = 48
      if (event.which == zero) {
        fetch('{{user}}', '{{repo}}', '{{name}}');
      }
    });
  });
</script>
